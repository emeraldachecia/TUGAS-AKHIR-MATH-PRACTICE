<section class="template-summary">
    <div class="container template-summary-container">
        <div class="card template-summary-card">
            <!-- Header -->
            <div class="template-table-header">
                <!-- Left: Search -->
                <div class="template-search">
                    <input type="text" id="searchInput" placeholder="Cari berdasarkan konten..." />
                </div>

                <!-- Center: Segmented control (2 baris: topic & level) -->
                <div class="template-filter-group">
                    <div class="template-topic-filter">
                        <button class="segment-btn active" data-topic="all">Semua</button>
                        <button class="segment-btn" data-topic="arithmetic">
                            Aritmatika
                        </button>
                        <button class="segment-btn" data-topic="geometry">Bangun Datar</button>
                    </div>
                    <div class="template-level-filter">
                        <button class="segment-btn active" data-level="all">Semua</button>
                        <button class="segment-btn" data-level="easy">Mudah</button>
                        <button class="segment-btn" data-level="medium">Sedang</button>
                        <button class="segment-btn" data-level="hard">Sulit</button>
                    </div>
                </div>

                <!-- Right: New Template -->
                <div class="template-action">
                    <button id="btnNewTemplate" class="btn new-template-btn">
                        Template Baru
                    </button>
                </div>
            </div>

            <!-- Table -->
            <table class="template-table">
                <thead>
                    <tr>
                        <th>Konten</th>
                        <th>Topik</th>
                        <th>Tingkat</th>
                    </tr>
                </thead>
                <tbody id="templateTableBody">
                    <tr>
                        <td colspan="3" class="no-data">Memuat...</td>
                    </tr>
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="pagination-container">
                <button class="pagination-btn nav prev" id="prevPage">&laquo;</button>
                <div id="paginationPages" class="pagination-pages"></div>
                <button class="pagination-btn nav next" id="nextPage">&raquo;</button>
            </div>
        </div>
    </div>
</section>