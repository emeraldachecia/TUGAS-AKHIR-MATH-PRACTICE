<section class="user-form">
    <div class="container user-form-container">
        <div class="card user-form-card">
            <h2>Tambah Admin Baru</h2>

            <form id="user-form" class="user-form-content">
                <div class="form-group">
                    <label for="name">Nama Lengkap</label>
                    <input type="text" id="name" name="name" placeholder="Nama Lengkap" required />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Alamat Email" required />
                </div>

                <div class="form-group">
                    <label for="password">Kata Sandi</label>
                    <input type="password" id="password" name="password" placeholder="Kata Sandi" required />
                </div>

                <div class="user-form-actions">
                    <button type="button" id="btnCancel" class="btn cancel-btn">
                        Batal
                    </button>
                    <button type="submit" id="btnSubmit" class="btn submit-btn">
                        Buat Admin
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>