<section class="user-detail">
    <div class="container user-detail-container">
        <div class="user-detail-card">
            <!-- Header -->
            <div class="user-detail-header">
                <h2>Detail Pengguna</h2>
                <button id="btnEdit" class="btn edit-btn inactive">Ubah</button>
            </div>

            <!-- Form -->
            <form id="userDetailForm" class="user-detail-form">
                <input type="hidden" id="user_id" name="user_id" value="<%= user ? user.user_id : '' %>" />

                <div class="form-group">
                    <label for="name">Nama</label>
                    <input type="text" id="name" name="name" placeholder="Nama Lengkap" disabled />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Alamat Email" disabled />
                </div>

                <div class="form-group">
                    <label for="role">Peran</label>
                    <input type="text" id="role" name="role" placeholder="Peran Pengguna" disabled />
                </div>

                <div class="form-group password-fields hidden">
                    <label for="newPassword">Kata Sandi Baru</label>
                    <input type="password" id="newPassword" name="newPassword" placeholder="Kata Sandi Baru" />
                </div>

                <!-- Actions -->
                <div class="user-detail-actions">
                    <button id="btnDelete" class="btn delete-btn" type="button">
                        Hapus
                    </button>
                    <button id="btnSave" class="btn save-btn hidden" type="submit">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>