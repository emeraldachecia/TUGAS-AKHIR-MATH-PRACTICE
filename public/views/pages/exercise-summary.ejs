<section class="exercise-summary">
    <div class="container exercise-summary-container">
        <div class="card exercise-summary-card">
            <!-- Header -->
            <div class="exercise-header">
                <!-- Segmented Controls -->
                <div class="filter-group">
                    <div class="segment-control topic-filter">
                        <button class="segment-btn active" data-topic="all">Semua</button>
                        <button class="segment-btn" data-topic="arithmetic">
                            Aritmatika
                        </button>
                        <button class="segment-btn" data-topic="geometry">Geometri</button>
                    </div>

                    <div class="segment-control level-filter">
                        <button class="segment-btn active" data-level="all">Semua</button>
                        <button class="segment-btn" data-level="easy">Mudah</button>
                        <button class="segment-btn" data-level="medium">Sedang</button>
                        <button class="segment-btn" data-level="hard">Sulit</button>
                    </div>
                </div>

                <!-- New Exercise Button -->
                <button id="btnNewExercise" class="btn new-exercise-btn">
                    Latihan Baru
                </button>
            </div>

            <!-- Table -->
            <table class="exercise-table">
                <thead>
                    <tr>
                        <th data-sort="date">Tanggal</th>
                        <th data-sort="score">Nilai</th>
                        <th data-sort="topic">Topik</th>
                        <th data-sort="level">Tingkat</th>
                    </tr>
                </thead>
                <tbody id="exerciseTableBody">
                    <tr>
                        <td colspan="4" class="no-data">Memuat...</td>
                    </tr>
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="pagination-container">
                <button class="pagination-btn nav prev" id="prevPage">&laquo;</button>
                <div id="paginationPages" class="pagination-pages"></div>
                <button class="pagination-btn nav next" id="nextPage">&raquo;</button>
            </div>
        </div>
    </div>
</section>

<!-- Popup Select Topic/Level -->
<div id="popupOverlay" class="popup-overlay hidden">
    <div class="popup_card">
        <h3>Buat Latihan Baru</h3>

        <div class="popup_row">
            <label>Topik</label>
            <select id="popupTopic">
                <option value="arithmetic">Aritmatika</option>
                <option value="geometry">Bangun Datar</option>
            </select>
        </div>

        <div class="popup_row">
            <label>Tingkat</label>
            <select id="popupLevel">
                <option value="easy">Mudah</option>
                <option value="medium">Sedang</option>
                <option value="hard">Sulit</option>
            </select>
        </div>

        <div class="popup-actions">
            <button class="btn popup-cancel-btn" id="popupCancel">Batal</button>
            <button class="btn popup-start-btn" id="popupStart">Mulai</button>
        </div>
    </div>
</div>